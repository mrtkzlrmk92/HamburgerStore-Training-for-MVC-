@model hamburger.Models.ViewsModel.ProductMultiModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <form method="post">
        <label>Name</label>
        <input type="text" name="Name" id="Name" value="@Model.product.Name" />
        <br />
        <label>Category</label>
        <select name="CategoryId" id="CategoryId" >
            <optgroup  >
                <option value="@Model.product.CategoryId">
                    @Model.product.category.Name
                </option>
            </optgroup>
            @foreach (var cat in Model.categories)
            {
                <option value="@cat.Id">@cat.Name</option>
            }

        </select>
        <br />
        <label>Unit Price</label>
        <input type="text" name="UnitPrice" id="UnitPrice" value="@Model.product.UnitPrice"/>
        <br />
        <label> Is  active</label>

        <input type="checkbox" value="true" checked="@Model.product.IsActive"
               data-val="true" name="IsActive"
               id="IsActive" />
        <input type="hidden" name="Id" id="Id" value="@Model.product.Id" />
        <br />
        <br />
        <button>Kaydet</button>

    </form>
</div>
