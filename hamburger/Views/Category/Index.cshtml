@model List<hamburger.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div >
    <a href="~/Category/Create" class="button"> Category Ekle</a>
    <br />
    <br />
    <table>
   
            <tr>

                <th>Category Id</th>
                <th>Category Name</th>
                <th>Is Active</th>
             
                <th>Setting</th>


            </tr>
    
            @if (Model.Count ==0)
            {
                <tr >
                    <td colspan="4">
                    lütfen category ekleyiniz..
                    </td>
         
                </tr>
            }
            else {
                foreach (var cat in Model)
                {
                    <tr>
                <td>@cat.Id</td>
                <td>@cat.Name</td>
                <td>@cat.IsActive</td>

                        <td>
                        <a href="~/Category/Edit/@cat.Id">Guncelle</a> | 
                        <a href="~/Category/Delete/@cat.Id">Sil</a>

                        </td>
            
                 </tr>

                }
            }
        
    </table>


</div>
