@model List<hamburger.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;

}

<h2>Index</h2>
<div>
    <a href="~/Customer/Create" class="button"> Customer Ekle</a>
    <br />
    <br />
    <table>

        <tr>

            <th>No</th>
            <th>Name</th>
            <th>surname</th>
            <th>balance</th>
            <th>IsActıve</th>
            <th>Setting</th>


        </tr>

        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="4">
                    lütfen Customer ekleyiniz..
                </td>

            </tr>
        }
        else
        {
            foreach (var cus in Model)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td>@cus.Name</td>
                    <td>@cus.Surname</td>
                    <td>@cus.Balance</td>
                    <td>@cus.IsActive</td>

                    <td>
                        <a href="~/Customer/Edit/@cus.Id">Guncelle</a> |
                        <a href="~/Customer/Delete/@cus.Id">Sil</a>

                    </td>

                </tr>

            }
        }

    </table>


</div>

